@model IEnumerable<BankingProjectAuth.Models.MoneyTransfer>

@{
    ViewData["Title"] = "Money Transfers";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RecipientName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RecipientIBAN)
