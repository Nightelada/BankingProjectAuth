@model BankingProjectAuth.Models.BankingAccountCurrencyViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="account.AccountType" class="control-label"></label>
                <select asp-for="account.AccountType" asp-items="Html.GetEnumSelectList<AccountType>()" class="form-control"></select>
                <span asp-validation-for="account.AccountType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="account.IBAN" class="control-label"></label>
                <input asp-for="account.IBAN" class="form-control" />
                <span asp-validation-for="account.IBAN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="account.Balance" class="control-label"></label>
                <input asp-for="account.Balance" class="form-control" />
                <span asp-validation-for="account.Balance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="account.Available" class="control-label"></label>
                <input asp-for="account.Available" class="form-control" />
                <span asp-validation-for="account.Available" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="account.Blocked" class="control-label"></label>
                <input asp-for="account.Blocked" class="form-control" />
                <span asp-validation-for="account.Blocked" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="account.CurrencyID" class="control-label"></label>
                <select asp-for="account.CurrencyID" asp-items="@Model.currencies" class="form-control">
                    </select>
                <span asp-validation-for="account.CurrencyID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="account.AllowedOverdraft" class="control-label"></label>
                <input asp-for="account.AllowedOverdraft" class="form-control" />
                <span asp-validation-for="account.AllowedOverdraft" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="account.UsedOverdraft" class="control-label"></label>
                <input asp-for="account.UsedOverdraft" class="form-control" />
                <span asp-validation-for="account.UsedOverdraft" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
